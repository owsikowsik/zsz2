<div class="hero-unit">

<h1>Pokaż Kalendarz</h1>

<table class="table table-striped table-bordered">

	<tr>
		<th>Nazwa</th>
		<td><%= @calendar.name %></td>
	</tr>
	<tr>
		<th>Pozycja</th>
		<td><%= @calendar.position %></td>
	</tr>
	<tr>
		<th>Od kiedy?</th>
		<td><%= @calendar.date1 %></td>
	</tr>
	<tr>
		<th>Do kiedy?</th>
		<td><%= @calendar.date2 %></td>
	</tr>
	<tr>
		<th>Gdzie?</th>
		<td><%= @calendar.place %></td>
	</tr>
	<tr>
		<th>Uwagi</th>
		<td><%= @calendar.info %></td>
	</tr>
	<tr>
		<th>Utworzony:</th>
		<td><%= @calendar.created_at %></td>
	</tr>
	<tr>
		<th>Aktualizacja:</th>
		<td><%= @calendar.updated_at %></td>
	</tr>

</table>

<%= link_to("Powrót", {:action => 'index'}, {:class => "btn btn-mini btn-primary"})%>


</div>
