
<table class="table table-striped table-bordered">	
	<tr>
		<th><%= pole.label(:nazwa) %></th>
		<td><%= pole.text_field(:name, :class =>"form-control") %></td>
	</tr>
	<tr>
		<th><%= pole.label(:pozycja) %></th>
		<td><%= pole.select(:position, 1..@counter, :class =>"form-control" ) %></td>
	</tr>

	<tr style="display: none;">
		<th><%= pole.label(:type_id, "Kategoria") %></th>
		<td><%= pole.select(:type_id, @type.map{|t| [t.name, t.id]}, :class =>"form-control" ) %></td>
	</tr>
	<% if !@galleries.img.blank? %>
		<tr>
			<th>ZdjÄ™cie</th>
			<td><%= image_tag(@galleries.img, :class => "img-responsive") %></td>
		</tr>
	<% end %>
	
	<tr>
		<th><%= pole.label(:zdjecie, "Fotografia") %></th>  
		<td><%= pole.file_field(:img) %></td>
	</tr>

	<tr style="display: none;">
		<th><%= pole.label(:created_at, "Utworzona") %></th>
		<td><%= pole.datetime_select(:created_at, :class =>"form-control") %></td>
	</tr>
</table>