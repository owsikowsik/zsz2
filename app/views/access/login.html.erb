
<%= form_tag({:action => 'logowanie'}) do %>

	<table>
		<tr>
			<td><%= label_tag(:user, "Użytkownik: " ) %></td>
			<td><%= text_field_tag(:user) %></td>
		</tr>
		<tr>
			<td><%= label_tag(:password, "Hasło: " ) %></td>
			<td><%= password_field_tag(:password) %></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= submit_tag("Zaloguj", {:class =>'btn btn-mini btn-success'}) %>
		</tr>
	</table>

<% end %>
