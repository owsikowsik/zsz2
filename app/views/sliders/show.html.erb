<div class="hero-unit">

<h1>Pokaż Slajd</h1>

<table class="table table-striped table-bordered">

	<tr>
		<th>Nazwa</th>
		<td><%= @slider.name %></td>
	</tr>
	<tr>
		<th>Pozycja</th>
		<td><%= @slider.position %></td>
	</tr>

	<% if !@slider.img.blank? %>
		<tr>
			<th>Zdjęcie</th>
			<td><%= image_tag(@slider.img, :class => "img-responsive") %></td>
		</tr>
	<% end %>	

	<tr>
		<th>Utworzona:</th>
		<td><%= @slider.created_at %></td>
	</tr>
	<tr>
		<th>Aktualizacja:</th>
		<td><%= @slider.updated_at %></td>
	</tr>

</table>

<%= link_to("Powrót", {:action => 'index'}, {:class => "btn btn-mini btn-primary"})%>


</div>
