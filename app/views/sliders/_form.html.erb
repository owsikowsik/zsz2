<table class="table table-striped table-bordered">	
	<tr>
		<th><%= pole.label(:pozycja) %></th>
		<td><%= pole.select(:position, 1..@counter, :class =>"form-control" ) %></td>
	</tr>
	<tr>
		<th><%= pole.label(:nazwa) %></th>
		<td><%= pole.text_field(:name, :class =>"form-control") %></td>
	</tr>
	
	<% if !@slider.img.blank? %>
		<tr>
			<th>Zdjęcie</th> 
			<td><%= image_tag(@slider.img, :class => "img-responsive") %></td>
		</tr>
	<% end %>

	<tr>
		<th><%= pole.label(:zdjecie, "Zdjęcie") %></th>  
		<td><%= pole.file_field(:img) %></td>
	</tr>

</table>